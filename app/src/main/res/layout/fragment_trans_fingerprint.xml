<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_authentication_fingerprint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:text="@string/command_fingerprint"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:lines="2"/>

        <ImageView
            android:id="@+id/fingerprint_icon"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:src="@drawable/fingerprint"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/fingerprint_description"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:id="@+id/fingerprintsettings"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_alignTop="@+id/fingerprint_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp">

            <Button
                android:id="@+id/btnPasswordAuthentication"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@color/buttonBlue"
                android:gravity="center"
                android:text="@string/try_pin"
                android:textColor="@color/text_inverse"
                android:textSize="18dp"
                android:paddingTop="5dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txtFingerprintError"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/txtFingerprintError"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/fingerprint_error"
                android:textColor="@color/warning_color"
                android:lines="2"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>


